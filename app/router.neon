defaults:
  language: cs
  view: redir # routing failure

home:
  path: /
  country: [
    default: '/en'
    localhost: '/cs'
    CZ: '/cs'
    SK: '/sk'
    DE: '/de'
    XX: '/en'
  ]
  assert_httpcode: 303

en:
  path: /en
  sitemap: true
  language: en

cs:
  path: /cs
  sitemap: true

sk:
  path: /sk
  sitemap: true
  language: sk

de:
  path: /de
  sitemap: true
  language: de

shortcodes:
  path: /shortcodes
  sitemap: true
  language: en

# routing failure
redir:
  redirect: /
