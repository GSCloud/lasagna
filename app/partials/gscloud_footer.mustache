<script nonce="{{ csp_nonce }}">
  (function (w, d, undefined) {
    if (w.GSC.init) {

      w.GSC.init.push(function () {
        w.GSC.names.push("GSC login");
        $(".login-button").on("click", function () {
          const uri = $(this).attr('href');
          $(this).prop('disabled', true).addClass('gsc-fade-blur-out').attr('href', '');
          setTimeout(function () {
            location.replace(uri)
          }, 300)
          return false;
        });
      });

      w.GSC.init.push(function () {
        w.GSC.names.push("GSC logout");
        $(".logout-button").on("click", function () {
          $(this).prop('disabled', true).addClass('gsc-fade-blur-out').attr('href', '');
          setTimeout(function () {
            location.replace('/logout')
          }, 300)
          return false;
        });
      });

    }
  })(window, document);
</script>

<style>
.gsc-blurbutton {
  transition: filter 500ms ease-in, opacity 500ms ease-in;
  filter: blur(0) grayscale(0);
  opacity: 1;
}
.gsc-fade-blur-out {
  filter: blur(30px) grayscale(1);
  opacity: 0;
}
</style>
