<div id="gscmodal" class="modal a_reset" style="color:#000!important">
  <div class="modal-content center">
    <p style="color:#000!important;font-family:Arial!important;font-size:1.3em"><b>{{ ENGINE }}</b> build&nbsp;{{ REVISIONS }}</p>
    <div class="container row center">
      {{#is_logged}}
      <div class="col s12">
        <a
          rel="noindex nofollow"
          class="logout oauth btn blue"
          data-umami-event="login"
          href="/logout"><i class="fa-solid fa-right-from-bracket"></i>&nbsp;{{ l.a_logout }}
        </a>
      </div>
      {{/is_logged}}
      {{^is_logged}}
      <div class="col s12">
        <a
          rel="noindex nofollow"
          class="login oauth"
          data-umami-event="login"
          href="/login"><img class="img-responsive" src="{{ cdn }}/img/google_signin.png" width=192 alt="{{ l.a_login }}">
        </a>
      </div>
      {{/is_logged}}
      <div class="col m6 s12 mono">
        <p>{{ l.a_footer_app }}<br>
        <b>{{ VERSION_SHORT }}</b></p>
      </div>
      <div class="col m6 s12 mono">
        <p>{{ l.a_footer_date }}<br>
        <b>{{ VERSION_DATE }}</b></p>
      </div>
    </div>
  </div>
</div>

