<div id="gscmodal" class="modal a_reset" style="color:#000!important">
    <div class="modal-content">
        <p style="color:#000!important;font-family:Arial!important;font-size:1.3em">{{ ENGINE }} rev. {{ REVISIONS }}</p>
        <div class="container row center">
            <div class="col l4 m6 s12">
                <p>{{ l.a_footer_app }}:
                    <br>
                    {{ VERSION_SHORT }}</p>
            </div>
            <div class="col l4 m6 s12">
                <p>{{ l.a_footer_date }}:
                    <br>
                    {{ VERSION_DATE }}</p>
            </div>
            <div class="col l4 m6 s12">

                {{#LOCALHOST}}{{#goauth_client_id}}{{#goauth_secret}}
                <a rel="nofollow" href="{{ local_goauth_redirect }}?nonce={{#sha256_nonce}}123{{/sha256_nonce}}"
                    class="oauth waves-effect waves-light blue btn-large z-depth-3">
                    {{ l.a_login }}<i class="material-icons right">cloud</i>
                </a>
                {{/goauth_secret}}{{/goauth_client_id}}{{/LOCALHOST}}

                {{^LOCALHOST}}{{#goauth_client_id}}{{#goauth_secret}}
                <a id="google-login-footer1" data-umami-event="google-login-footer1" rel="nofollow" href="{{ goauth_redirect }}?nonce={{#sha256_nonce}}123{{/sha256_nonce}}"
                    class="oauth waves-effect waves-light blue btn-large z-depth-3">
                    {{ l.a_login }}<i class="material-icons right">cloud</i>
                </a>
                {{/goauth_secret}}{{/goauth_client_id}}{{/LOCALHOST}}

                <br><br>

                {{#LOCALHOST}}{{#goauth_client_id}}{{#goauth_secret}}
                <a rel="nofollow" href="{{ local_goauth_redirect }}?nonce={{#sha256_nonce}}123{{/sha256_nonce}}&relogin"
                    class="oauth waves-effect waves-light red btn-large z-depth-3">
                    {{ l.a_relogin }}<i class="material-icons right">cloud</i>
                </a>
                {{/goauth_secret}}{{/goauth_client_id}}{{/LOCALHOST}}

                {{^LOCALHOST}}{{#goauth_client_id}}{{#goauth_secret}}
                <a id="google-login-footer2" data-umami-event="google-login-footer2" rel="nofollow" href="{{ goauth_redirect }}?nonce={{#sha256_nonce}}123{{/sha256_nonce}}&relogin"
                    class="oauth waves-effect waves-light red btn-large z-depth-3">
                    {{ l.a_relogin }}<i class="material-icons right">cloud</i>
                </a>
                {{/goauth_secret}}{{/goauth_client_id}}{{/LOCALHOST}}

            </div>
        </div>
    </div>
</div>

