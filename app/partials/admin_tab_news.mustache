{{^disable_news_admin}}
<style>
.opensource {font-weight:bold}
.shortcodes {font-family:monospace}
.opensource {font-family:sans-serif}
.opensource a {color:#fff!important;text-decoration:underline!important}
</style>

<div id="news" class="row">
  <div class="container">

    <h4><i class="fa-solid small fa-circle-info"></i>&nbsp;&nbsp;{{ l.a_oss }}</h4>
    <p>{{ l.a_news_info }}</p>

    <a
      target="_blank"
      rel="noopener nofollow"
      class="waves-effect btn white-text nowrap"
      data-umami-event="changelog"
      href="https://raw.githubusercontent.com/GSCloud/lasagna/master/CHANGELOG.md.pdf">
      <i aria-label="GitHub" class="fa-brands fa-square-github"></i>&nbsp;&nbsp;<b>{{ l.a_changelog }}</b></a>
    <a
      target="_blank"
      rel="noopener nofollow"
      class="waves-effect btn white-text nowrap"
      data-umami-event="manual"
      href="https://raw.githubusercontent.com/GSCloud/lasagna/master/TECHNICAL_DETAILS_EN.md.pdf">
      <i aria-label="GitHub" class="fa-brands fa-square-github"></i>&nbsp;&nbsp;<b>{{ l.a_manual }}</b></a>
    <a
      target="_blank"
      rel="noopener nofollow"
      class="waves-effect btn white-text nowrap"
      data-umami-event="LASAGNA defaults"
      href="https://docs.google.com/spreadsheets/d/1z2a5X7HVR9To7FvxMfRm_6ZxHeTVljUO8BjjMkI3phI/edit?usp=sharing">
      <i aria-label="Google Sheet" class="fa-solid fa-table-cells"></i>&nbsp;&nbsp;<b>LASAGNA&nbsp;DEFAULTS</b></a>
    <a
      target="_blank"
      rel="noopener nofollow"
      class="waves-effect btn white-text nowrap"
      data-umami-event="LASAGNA admin"
      href="https://docs.google.com/spreadsheets/d/1iwJNAuvHQtNOgxQfQK5TYtROzCwFOBFGeo7Vj-7_48Q/edit?usp=sharing">
      <i aria-label="Google Sheet" class="fa-solid fa-table-cells"></i>&nbsp;&nbsp;<b>LASAGNA&nbsp;ADMIN</b></a>

    <br><br>

    <span class="opensource">
      <a target=_blank rel="nofollow" href="https://cdnjs.com/libraries/codemirror"><b>CodeMirror</b></a>&nbsp;{{ codemirror }}<br>
      <a target=_blank rel="nofollow" href="https://fontawesome.com/download"><b>FontAwesome</b></a>&nbsp;7.0.0<br>
      <a target=_blank rel="nofollow" href="https://jquery.com"><b>jQuery</b></a>&nbsp;3.7.1<br>
      <a target=_blank rel="nofollow" href="https://github.com/lokesh/lightbox2/releases"><b>Lightbox2</b></a>&nbsp;2.11.5<br>
      <a target=_blank rel="nofollow" href="https://github.com/materializecss/materialize/releases"><b>Materialize</b></a>&nbsp;1.2.2<br>
      <a target=_blank rel="nofollow" href="https://momentjs.com"><b>Moment</b></a>&nbsp;2.30.1<br>
      <a target=_blank rel="nofollow" href="https://github.com/summernote/summernote/releases"><b>Summernote</b></a>&nbsp;{{ summernote }}<br>
      <a target=_blank rel="nofollow" href="https://github.com/jhuckaby/zeroupload"><b>ZeroUpload</b></a>&nbsp;1.0.0<br>
    </span>
    <p>({{ l.a_news_os_info }})</p>

    <h4>{{ l.a_shortcodes }}</h4>
    <p>{{ l.a_news_sc_info }}</p>

    <span class="shortcodes">
      [<b>markdown</b>] / [<b>markdownextra</b>]
      <br>
      [<b>image</b>&nbsp;&lt;name&gt;]
      [<b>imageleft</b>&nbsp;&lt;name&gt;]
      [<b>imageright</b>&nbsp;&lt;name&gt;]
      [<b>imageresp</b>&nbsp;&lt;name&gt;]
      [<b>figure</b>&nbsp;&lt;name&gt;&nbsp;&lt;description&gt;]
      <br>
      [<b>gallery</b>&nbsp;&lt;mask&gt;&nbsp;[&lt;order|random&gt;]]
      [<b>galleryspan</b>&nbsp;&lt;mask&gt;&nbsp;[&lt;order|random&gt;]]
      <br>
      [<b>googlemap</b>&nbsp;&lt;location&gt;]
      [<b>mastodon</b>&nbsp;&lt;post_id&gt;]
      [<b>qrcode</b>&nbsp;&lt;text&gt;]
      [<b>soundcloud</b>&nbsp;&lt;song_id&gt;]
      [<b>twitch</b>&nbsp;&lt;channel_id&gt;]
      [<b>twitchvid</b>&nbsp;&lt;video_id&gt;]
      [<b>vimeo</b>&nbsp;&lt;video_id&gt;]
      [<b>youtube</b>&nbsp;&lt;video_id&gt;]
      <br><br>
      &lt;<b>mask</b>&gt; &mdash;&nbsp;search pattern like "&lt;mask&gt;*" (mask always ends with *)
      <br>
      &lt;<b>name</b>&gt; &mdash;&nbsp;image name without extension (.webp is applied)
      <br>
      &lt;<b>order</b>|<b>random</b>&gt; &mdash;&nbsp;optional keyword
      <br>
      &lt;<b>channel_id</b>&gt; &mdash;&nbsp;channel id
      <br>
      &lt;<b>location</b>&gt; &mdash;&nbsp;joined "word+list"
      <br>
      &lt;<b>post_id</b>&gt; &mdash;&nbsp;full URL to the Mastodon post
      <br>
      &lt;<b>text</b>&gt; &mdash;&nbsp;QR code text
      <br>
      &lt;<b>song_id</b>&gt; &mdash;&nbsp;song id
      <br>
      &lt;<b>video_id</b>&gt; &mdash;&nbsp;video id
      <br>

    </span>

  <br><hr><br>

  </div>
</div>
{{/disable_news_admin}}