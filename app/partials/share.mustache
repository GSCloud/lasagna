{{^disable_share_mastodon}}
<a
    class="waves-effect waves-light btn-small share white-text"
    href="https://sharetomastodon.github.io/?title={{ l.og_title }}&url={{ canonical_url }}{{ request_path }}"
    target="_blank"><i class="fa-solid fa-share-nodes"></i>&nbsp;<i class="fa-brands fa-mastodon"></i>&nbsp;{{ l.share_mastodon }}</a>
{{/disable_share_mastodon}}

{{^disable_share_bluesky}}
<a
    class="waves-effect waves-light btn-small share white-text"
    href="https://bsky.app/intent/compose?text={{ l.og_title }}%20{{ canonical_url }}{{ request_path }}"
    target="_blank"><i class="fa-solid fa-share-nodes"></i>&nbsp;<i class="fa-brands fa-bluesky"></i>&nbsp;{{ l.share_bluesky }}</a>
{{/disable_share_bluesky}}

{{^disable_share_facebook}}
<a
    class="waves-effect waves-light btn-small share white-text"
    href="https://www.facebook.com/sharer/sharer.php?u={{ canonical_url }}{{ request_path }}"
    target="_blank"><i class="fa-solid fa-share-nodes"></i>&nbsp;<i class="fa-brands fa-facebook"></i>&nbsp;{{ l.share_facebook }}</a>
{{/disable_share_facebook}}
