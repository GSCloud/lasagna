<meta name="viewport" content="{{ l.meta_viewport }}{{^l.meta_viewport}}width=device-width, initial-scale=1.0{{/l.meta_viewport}}">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="{{ design.status_bar }}{{^design.status_bar}}black{{/design.status_bar}}">
<meta name="apple-mobile-web-app-title" content="{{ l.title }}">
<meta name="mobile-web-app-capable" content="yes">
<meta name="theme-color" content="{{ design.theme_color }}">

{{#google.google-site-verification}}
<meta name="google-site-verification" content="{{ google.google-site-verification }}">
{{/google.google-site-verification}}

<meta name="google" content="notranslate">
<meta name="format-detection" content="address=no">
<meta name="format-detection" content="date=no">
<meta name="format-detection" content="email=no">
<meta name="format-detection" content="telephone=no">
<meta name="description" content="{{ l.meta_description }}">
<meta name="author" content="{{ l.meta_author }}">
<meta property="article:author" content="{{ l.article_author }}">
<meta property="article:publisher" content="{{ l.article_publisher }}">
<meta property="og:title" content="{{ l.og_title }}{{^l.og_title}}{{ l.title }}{{/l.og_title}}">
<meta property="og:site_name" content="{{ l.og_site_name }}{{^l.og_site_name}}{{ l.title }}{{/l.og_site_name}}">
<meta property="og:description" content="{{ l.og_description }}{{^l.og_description }}{{ l.meta_description }}{{/l.og_description }}">
<meta property="og:image" content="{{ l.og_image }}{{^l.og_image}}{{ canonical_url }}img/favicon-256.png{{/l.og_image}}">
<meta property="og:type" content="{{ l.og_type }}{{^l.og_type}}website{{/l.og_type}}">
<meta property="og:url" content="{{ l.og_url }}{{^l.og_url}}{{ canonical_url }}{{ request_path }}{{/l.og_url}}">
{{#langen}}
<meta property="og:locale" content="en_US">
<meta property="og:locale:alternate" content="cs_CZ">
{{/langen}}
{{#langcs}}
<meta property="og:locale" content="cs_CZ">
<meta property="og:locale:alternate" content="en_US">
{{/langcs}}
{{#langsk}}
<meta property="og:locale" content="sk_SK">
<meta property="og:locale:alternate" content="cs_CZ">
<meta property="og:locale:alternate" content="en_US">
{{/langsk}}
{{#langde}}
<meta property="og:locale" content="de_DE">
<meta property="og:locale:alternate" content="en_US">
{{/langde}}

<script type="application/ld+json" nonce="{{ csp_nonce }}">
{
    "@context": "https://schema.org",
    "@type": "Website",
    "headline": "{{ l.og_title }}{{^l.og_title}}{{ l.title }}{{/l.og_title}}",
    "description": "{{ l.meta_description }}",
    "author": {
        "@type": "Person",
        "name": "{{ l.meta_author }}"
    },
    "publisher": {
        "@type": "Organization",
        "name": "{{ l.og_title }}{{^l.og_title}}{{ l.title }}{{/l.og_title}}",
        "logo": {
            "@type": "ImageObject",
            "url": "{{ l.og_image }}{{^l.og_image}}{{ canonical_url }}img/favicon-256.png{{/l.og_image}}"
        }
    },
    "image": "{{ l.og_image }}{{^l.og_image}}{{ canonical_url }}img/favicon-256.png{{/l.og_image}}",
    "url": "{{ l.og_url }}{{^l.og_url}}{{ canonical_url }}{{ request_path }}{{/l.og_url}}"
}
</script>
