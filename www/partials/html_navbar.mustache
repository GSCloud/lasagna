<nav class="{{ design.nav_color }}" role="navigation">
  <div class="nav-wrapper container">
    <a id="logo-container" class="brand-logo truncate" href="/{{#langcs}}cs{{/langcs}}{{#langen}}en{{/langen}}">{{ l.title }}</a>
    <ul class="right hide-on-med-and-down">
      <li>
        <a class="{{#langcs}}{{ design.nav_color}} darken-4{{/langcs}} text-lighten-4"
        {{^langcs}}href="/cz"{{/langcs}}><b>{{ l.nav_czech }}</b></a>
      </li>
      <li>
        <a class="{{#langen}}{{ design.nav_color}} darken-4{{/langen}} text-lighten-4"
        {{^langen}}href="/en"{{/langen}}><b>{{ l.nav_english }}</b></a>
      </li>
    </ul>
    <ul id="nav-mobile" class="sidenav {{ design.nav_color }}">
      <li>
        <a class="{{#langcs}}black{{/langcs}}" href="/cz">
        <i class="fas fa-language right"></i>
        <b style="color:#fff!important">{{ l.nav_czech }}</b></a>
      </li>
      <li>
        <a class="{{#langen}}black{{/langen}}" href="/en">
        <i class="fas fa-language right"></i>
        <b style="color:#fff!important">{{ l.nav_english }}</b></a>
      </li>

      {{#l.company_facebook}}
      <li>
        <a style="color:#fff!important" href="https://facebook.com/{{ l.company_facebook }}">
          <i class="fab fa-facebook"></i>&nbsp;&nbsp;Facebook</a>
      </li>
      {{/l.company_facebook}}

      {{#l.company_instagram}}
      <li>
        <a style="color:#fff!important" href="https://instagram.com/{{ l.company_instagram }}">
          <i class="fab fa-instagram"></i>&nbsp;&nbsp;Instagram</a>
      </li>
      {{/l.company_instagram}}
    </ul>
    <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
  </div>
</nav>
